{
  "name": "next-promise-bulk-card-generator",
  "version": "1.0.0",
  "description": "Production-ready Next.js bulk card generator with Excel support and Photoshop-like text rendering",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=2048 next dev",
    "dev:low-mem": "cross-env NODE_OPTIONS=\"--max-old-space-size=1024 --wasm-memory-max=512mb\" next dev",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=2048 next build",
    "build:low-mem": "cross-env NODE_OPTIONS=--max-old-space-size=1024 next build",
    "build:simple": "next build",
    "start": "node server.js",
    "start:next": "next start",
    "lint": "next lint",
    "create-admin": "node scripts/createSuperadmin.js"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.50",
    "archiver": "^6.0.1",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.0.2",
    "formidable": "^3.5.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.19.4",
    "next": "^14.0.4",
    "p-limit": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
